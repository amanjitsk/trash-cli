#!/bin/bash
set -xe

version="$(python -c 'import setuptools; setuptools.setup()' --version)"
python -c 'import setuptools; setuptools.setup()' sdist
pip install dist/trash-cli-"$version"*.tar.gz

trash --version
trash-put --version
trash-list --version
trash-rm --version
trash-restore --version
trash-empty --version
